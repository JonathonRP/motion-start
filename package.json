{
	"name": "motion-start",
	"version": "0.0.1",
	"description": "Svelte animation library based on the React library framer-motion.",
	"main": "src/index.ts",
	"files": ["./src"],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && svelte-kit sync && svelte-package --input ./src/lib/motion-start && publint --strict",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test": "vitest",
		"test:types": "vitest --typecheck.only",
		"test:ui": "vitest --ui",
		"test:types:ui": "vitest --ui",
		"ci:version": "changeset version && pnpm -r generate:version && git add --all",
		"ci:publish": "pnpm build && changeset publish"
	},
	"author": "JonathonRP",
	"license": "MIT",
	"dependencies": {
		"framesync": "^6.1.2",
		"popmotion": "^11.0.5",
		"style-value-types": "5.1.2",
		"tslib": "^2.7.0",
		"bits-ui": "^0.21.15",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.445.0",
		"mode-watcher": "^0.4.1",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.8",
		"@biomejs/biome": "1.9.2",
		"@emotion/is-prop-valid": "^1.3.1",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
		"@tsconfig/svelte": "^5.0.4",
		"@types/node": "^20.16.9",
		"@vitest/ui": "latest",
		"csstype": "^3.1.3",
		"publint": "^0.2.11",
		"svelte": "^5.0.0-next.259",
		"typescript": "^5.6.2",
		"vite": "^5.4.8",
		"vitest": "latest",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/kit": "^2.5.28",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0-alpha.25",
		"@types/react": "^18.3.9",
		"tailwindcss": "^4.0.0-alpha.25"
	},
	"peerDependencies": {
		"svelte": "^5.0.0 || ^5.0.0-next.0"
	},
	"type": "module",
	"engines": {
		"bun": ">=1.0.0",
		"pnpm": ">=8.7.0",
		"node": ">=20"
	},
	"packageManager": "pnpm@9.6.0",
	"repository": {
		"type": "git",
		"ur": "https://github.com/JonathonRP/motion-start/"
	},
	"sideEffects": false,
	"keywords": ["svelte animation", "svelte", "animation", "gestures", "drag", "spring", "popmotion", "framer-motion"],
	"trustedDependencies": ["@biomejs/biome"]
}
